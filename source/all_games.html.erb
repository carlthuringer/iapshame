---
title: All Games - In-App Purchase Shame
---
<%- require 'config/boot' %>
<script type='text/javascript'>
window.allGames = <%= GameRepository.read_all_ordered.compact.to_json %>;
</script>
<div ng-controller="AllGamesController">
<ul class='game-grid'>
  <li dir-paginate="game in games | itemsPerPage: 8">
    <div class='thumbnail'>
      <h2><a href="{{ game.preview_uri }}" target="blank"><img ng-src="{{ game.image_uri }}"></img></a></h2>
      <div class='caption'>
        <h3 ng-if="game.top_iap_title">{{ game.top_iap_title }} <span class='price'>${{ game.top_iap_price }}</span></h3>
        <h4><p>{{ game.name }}</p></h4>
        <h5><span class='release-date'>{{ game.release_date }}</span></h5>
      </div>
    </div>
  </li>
</ul>
<dir-pagination-controls></dir-pagination-controls>
<div class='thumbnail' ng-hide="!search.term"><h3 class='text-center'>That is all.</h3></div>
</div>
